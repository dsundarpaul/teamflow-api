import { IsNotEmpty, IsString, IsEnum } from 'class-validator';
import { TicketStatus } from '@prisma/client';

export class CreateTicketDto {
  @IsString()
  @IsNotEmpty()
  title: string;

  @IsString()
  @IsNotEmpty()
  description: string;

  @IsNotEmpty()
  teamId: string; // assign to team

  @IsEnum(TicketStatus)
  status?: TicketStatus; // default OPEN
}
