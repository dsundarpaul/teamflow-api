generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

enum Status {
  Active
  Inactive
}
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  username  String   @unique
  avatar    String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(USER)
}

